COMBOBOX IDC_FIND_EDIT, 50, 7, 219, 100, CBS_DROPDOWN | CBS_AUTOHSCROLL | WS_VSCROLL

LTEXT "Replace:", IDC_STATIC, 7, 29, 50, 14
COMBOBOX IDC_REPLACE_EDIT, 50, 29, 219, 100, CBS_DROPDOWN | CBS_AUTOHSCROLL | WS_VSCROLL

CONTROL "Whole word", IDC_WHOLE_WORD_CHECKBOX, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 53, 100, 14
CONTROL "Match case", IDC_MATCH_CASE_CHECKBOX, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 76, 100, 14

