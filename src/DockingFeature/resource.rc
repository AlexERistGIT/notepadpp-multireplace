CONTROL "Normal", IDC_NORMAL_RADIO, "Button", BS_AUTORADIOBUTTON | WS_GROUP | WS_TABSTOP, 125, 55, 50, 10
CONTROL "Regex", IDC_REGEX_RADIO, "Button", BS_AUTORADIOBUTTON, 125, 70, 50, 10
CONTROL "Extended", IDC_EXTENDED_RADIO, "Button", BS_AUTORADIOBUTTON, 125, 85, 50, 10

DEFPUSHBUTTON "Replace all", IDC_REPLACE_ALL_BUTTON, 207, 53, 60, 14
